{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist",
        "rootDir": "./",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "noResolve": false,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "**/*.js",
        "**/*.ts",
        "**/*.json"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist",
        "build",
        "uploads",
        "tests/**/*.test.js"
    ]
}